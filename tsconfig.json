{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom", "node", "playwright"]
  },
  "include": [
    "src",
    "test",
    "e2e",
    "api",
    "netlify/functions",
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts"
  ]
}
